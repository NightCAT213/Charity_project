<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/graywhite"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_productInfo_back"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@drawable/ellipse_1"
        android:padding="10dp"
        android:src="@drawable/arrow_1"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="@+id/iv_productInfo"
        app:layout_constraintTop_toTopOf="@id/iv_productInfo" />

    <TextView
        android:id="@+id/tv_productInfo_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        android:textSize="35dp"
        android:text="Помощь:" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

    <RadioButton
        android:id="@+id/radio_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:textSize="30dp"
        android:text="Всем"
        android:checked="true"
        android:layout_weight="1" />

    <RadioButton
        android:id="@+id/radio_elder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Пожилым"
        android:layout_marginLeft="24dp"
        android:textSize="30dp"
        android:layout_weight="1" />

    <RadioButton
        android:id="@+id/radio_adult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:text="Взрослым"
        android:textSize="30dp"
        android:layout_weight="1" />

    <RadioButton
        android:id="@+id/radio_child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:text="Детям"
        android:textSize="30dp"
        android:layout_weight="1" />

        <RadioButton
            android:id="@+id/radio_animal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:text="Животным"
            android:textSize="30dp"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/radio_ecology"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:text="Экологии"
            android:textSize="30dp"
            android:layout_weight="1" />

    </RadioGroup>

</LinearLayout>